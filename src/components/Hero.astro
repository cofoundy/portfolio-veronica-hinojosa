---
import { siteConfig } from "../config";
const c = siteConfig.colors;
---

<section id="hero" class="relative overflow-hidden min-h-[90vh] flex flex-col justify-center" style={`background: ${c.cream}`}>
  {/* Decorative blobs */}
  <div class="absolute top-[-10%] right-[-5%] w-[500px] h-[500px] rounded-full opacity-[0.07]" style={`background: radial-gradient(circle, ${c.teal}, transparent 70%)`}></div>
  <div class="absolute bottom-[-15%] left-[-8%] w-[400px] h-[400px] rounded-full opacity-[0.06]" style={`background: radial-gradient(circle, ${c.coral}, transparent 70%)`}></div>

  <div class="relative max-w-5xl mx-auto px-6 lg:px-8 py-16 md:py-20">
    {/* Brand pill */}
    <div class="hero-brand flex justify-center mb-10">
      <span
        class="text-[10px] md:text-xs font-medium uppercase tracking-[0.25em] px-5 py-2 rounded-full"
        style={`color: ${c.coral}; border: 1px solid ${c.coral}30; background: white`}
      >
        {siteConfig.brandName}
      </span>
    </div>

    {/* Photo */}
    <div class="hero-photo flex justify-center mb-10">
      <div class="relative">
        <div class="absolute -inset-4 rounded-full" style={`border: 1.5px dashed ${c.teal}25`}></div>
        <div class="absolute -inset-1.5 rounded-full" style={`background: linear-gradient(135deg, ${c.teal}20, ${c.coral}20)`}></div>
        <img
          src="/profile.jpg"
          alt={siteConfig.name}
          class="relative w-44 h-44 md:w-52 md:h-52 rounded-full object-cover"
          style={`border: 4px solid white; box-shadow: 0 20px 60px -15px ${c.teal}25`}
        />
      </div>
    </div>

    {/* Name */}
    <h1 class="hero-title text-center text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-[1.1] tracking-tight" style={`color: ${c.dark}`}>
      Veronica<br class="sm:hidden" /> Hinojosa-Stang
    </h1>

    {/* Title */}
    <p class="hero-subtitle text-center text-sm sm:text-base md:text-lg mt-4 max-w-xl mx-auto leading-relaxed" style={`color: ${c.teal}`}>
      {siteConfig.title}
    </p>

    {/* Divider */}
    <div class="hero-divider flex justify-center items-center gap-3 mt-6">
      <div class="w-10 h-px" style={`background: ${c.coral}40`}></div>
      <svg class="w-3.5 h-3.5" style={`color: ${c.coral}`} fill="currentColor" viewBox="0 0 24 24">
        <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
      </svg>
      <div class="w-10 h-px" style={`background: ${c.coral}40`}></div>
    </div>

    {/* Tagline */}
    <p class="hero-tagline text-center text-base md:text-lg italic mt-5 max-w-md mx-auto" style={`color: ${c.coral}`}>
      "{siteConfig.tagline}"
    </p>

    {/* CTA */}
    <div class="hero-cta flex justify-center mt-8">
      <a
        href={`mailto:${siteConfig.social.email}`}
        class="group inline-flex items-center gap-2.5 px-8 py-3.5 rounded-full text-white font-medium shadow-lg transition-all duration-300 hover:scale-[1.03] hover:shadow-xl"
        style={`background: linear-gradient(135deg, ${c.teal}, ${c.coral}); box-shadow: 0 8px 30px -8px ${c.teal}35`}
      >
        Contact Veronica
        <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>

    {/* Stats */}
    <div class="hero-stats grid grid-cols-2 md:grid-cols-4 gap-3 mt-14 max-w-2xl mx-auto">
      {siteConfig.stats.map((stat) => (
        <div class="stat-card text-center py-4 px-3 rounded-2xl bg-white/70 backdrop-blur-sm" style={`box-shadow: 0 2px 12px ${c.teal}08; border: 1px solid ${c.teal}08`}>
          <div class="text-2xl md:text-3xl font-bold" style={`color: ${c.teal}`}>{stat.value}</div>
          <div class="text-[10px] md:text-xs uppercase tracking-wider mt-1 font-medium" style={`color: ${c.coral}`}>{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>
