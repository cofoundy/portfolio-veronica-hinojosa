---
import { siteConfig } from "../config";
import type { Texts, Lang } from "../i18n";

interface Props {
  texts: Texts;
  lang: Lang;
}
const { texts } = Astro.props;
const c = siteConfig.colors;
---

<section id="press" class="py-16 md:py-20 bg-white">
  <div class="max-w-5xl mx-auto px-6 lg:px-8">
    <div class="reveal-left mb-10">
      <span class="text-[10px] md:text-xs font-medium uppercase tracking-[0.25em]" style={`color: ${c.coral}`}>{texts.press.label}</span>
      <h2 class="text-3xl md:text-4xl font-bold mt-2" style={`color: ${c.dark}`}>{texts.press.heading}</h2>
      <div class="w-12 h-0.5 mt-3 rounded-full" style={`background: ${c.coral}`}></div>
    </div>

    <div class="grid grid-cols-1 gap-4 max-w-3xl">
      {siteConfig.press.map((article, i) => {
        const translatedArticle = texts.press.articles[i];
        const isLink = !!article.url;
        const Tag = isLink ? "a" : "div";
        const linkProps = isLink ? { href: article.url, target: "_blank", rel: "noopener noreferrer" } : {};
        return (
          <Tag
            {...linkProps}
            class={`reveal stagger-${i + 1} group p-6 rounded-2xl transition-all duration-300 ${isLink ? "hover:-translate-y-1 hover:shadow-lg cursor-pointer" : ""}`}
            style={`background: ${c.cream}; border: 1px solid ${c.teal}08`}
          >
            <div class="flex items-center gap-2 mb-4">
              <span class="text-[10px] font-semibold uppercase tracking-wider px-2 py-1 rounded-full" style={`background: ${c.teal}08; color: ${c.teal}`}>
                {article.source}
              </span>
              <span class="text-[10px] text-gray-400">{article.date}</span>
            </div>

            <h3 class="text-lg md:text-xl font-bold leading-snug mb-3" style={`color: ${c.dark}`}>
              {translatedArticle.title}
            </h3>

            <p class="text-sm text-gray-500 leading-relaxed">
              {translatedArticle.excerpt}
            </p>

            {isLink && (
              <div class="mt-4 flex items-center gap-1 text-sm font-medium transition-all duration-300 group-hover:gap-2" style={`color: ${c.coral}`}>
                {texts.press.cta}
                <svg class="w-3.5 h-3.5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </div>
            )}
          </Tag>
        );
      })}
    </div>
  </div>
</section>
