---
import { siteConfig } from "../config";
const c = siteConfig.colors;
---

<section id="trust" class="py-16 md:py-20" style={`background: ${c.cream}`}>
  <div class="max-w-5xl mx-auto px-6 lg:px-8">
    <div class="reveal-left mb-10">
      <span class="text-[10px] md:text-xs font-medium uppercase tracking-[0.25em]" style={`color: ${c.coral}`}>Recognition</span>
      <h2 class="text-3xl md:text-4xl font-bold mt-2" style={`color: ${c.dark}`}>Why Families Trust Veronica</h2>
      <div class="w-12 h-0.5 mt-3 rounded-full" style={`background: ${c.coral}`}></div>
    </div>

    {/* Three trust pillars */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {/* Yelp */}
      <a
        href={siteConfig.yelp.url}
        target="_blank"
        rel="noopener noreferrer"
        class="reveal stagger-1 group p-6 rounded-2xl bg-white transition-all duration-300 hover:-translate-y-1 hover:shadow-lg"
        style={`border: 1px solid ${c.teal}10; box-shadow: 0 2px 12px ${c.teal}06`}
      >
        <div class="flex items-center gap-3 mb-4">
          <div class="flex items-center gap-2 px-3 py-1.5 rounded-lg" style="background: #D32323">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M20.16 12.594l-4.995 1.433c-.96.276-1.74-.8-1.176-1.63l2.996-4.407c.408-.6 1.26-.58 1.632.036l1.543 2.558c.42.7.42 1.31 0 2.01zm-7.166 5.15l-.504-5.23c-.096-1 1.056-1.65 1.74-.98l3.63 3.534c.492.48.372 1.32-.228 1.596l-2.49 1.152c-.678.312-1.374.312-2.148-.072zm-2.09-5.82l-4.764-2.07c-.894-.39-.894-1.662 0-2.052l2.502-1.086c.66-.288 1.356-.108 1.848.48l2.262 3.156c.564.786-.18 1.836-1.092 1.572l-.756-.216zm-4.9 7.684l1.35-5.07c.258-.966 1.56-1.11 2.016-.228l2.424 4.698c.33.636-.072 1.386-.762 1.422l-2.868.18c-.78.048-1.41-.252-2.16-1.002zm1.368-14.358l3.678 3.534c.696.672.234 1.86-.696 1.794l-4.926-.342c-.672-.048-1.098-.684-.81-1.212l1.206-2.196c.384-.702.84-1.104 1.548-1.578z"/></svg>
            <span class="text-white font-bold text-sm tracking-wide">yelp</span>
          </div>
          <div class="flex gap-0.5">
            {[1,2,3,4,5].map(() => (
              <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>
        </div>
        <p class="text-2xl font-bold" style={`color: ${c.dark}`}>{siteConfig.yelp.reviews}</p>
        <p class="text-sm font-medium" style={`color: ${c.teal}`}>{siteConfig.yelp.label}</p>
        <p class="text-xs text-gray-400 mt-1">{siteConfig.yelp.sublabel}</p>
        <div class="mt-3 flex items-center gap-1 text-xs font-medium transition-all duration-300 group-hover:gap-2" style={`color: ${c.coral}`}>
          Read reviews <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
        </div>
      </a>

      {/* Award */}
      <div class="reveal stagger-2 p-6 rounded-2xl bg-white" style={`border: 1px solid ${c.teal}10; box-shadow: 0 2px 12px ${c.teal}06`}>
        <div class="w-8 h-8 rounded-lg flex items-center justify-center mb-3" style={`background: ${c.coral}15`}>
          <svg class="w-4 h-4" style={`color: ${c.coral}`} fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5 2a1 1 0 011 1v1h1a1 1 0 010 2H6v1a1 1 0 01-2 0V6H3a1 1 0 010-2h1V3a1 1 0 011-1zm0 10a1 1 0 011 1v1h1a1 1 0 110 2H6v1a1 1 0 11-2 0v-1H3a1 1 0 110-2h1v-1a1 1 0 011-1zM12 2a1 1 0 01.967.744L14.146 7.2 17.5 9.134a1 1 0 010 1.732l-3.354 1.935-1.18 4.455a1 1 0 01-1.933 0L9.854 12.8 6.5 10.866a1 1 0 010-1.732l3.354-1.935 1.18-4.455A1 1 0 0112 2z" clip-rule="evenodd"/>
          </svg>
        </div>
        <p class="text-2xl font-bold" style={`color: ${c.dark}`}>{siteConfig.award.year}</p>
        <p class="text-sm font-medium" style={`color: ${c.teal}`}>{siteConfig.award.title}</p>
        <p class="text-xs text-gray-400 mt-1">Doulas & Midwives, {siteConfig.award.org}</p>
      </div>

      {/* Press */}
      <div class="reveal stagger-3 p-6 rounded-2xl bg-white" style={`border: 1px solid ${c.teal}10; box-shadow: 0 2px 12px ${c.teal}06`}>
        <div class="w-10 h-10 rounded-xl flex items-center justify-center mb-3" style={`background: ${c.teal}10`}>
          <svg class="w-5 h-5" style={`color: ${c.teal}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
          </svg>
        </div>
        <p class="text-2xl font-bold" style={`color: ${c.dark}`}>Featured</p>
        <p class="text-sm font-medium mb-2" style={`color: ${c.teal}`}>In the News</p>
        <div class="flex flex-col gap-1">
          {siteConfig.press.map((article) => (
            <a href={article.url} target="_blank" rel="noopener noreferrer" class="text-xs text-gray-500 hover:underline flex items-center gap-1 transition-colors" style={`hover:color: ${c.coral}`}>
              <span style={`color: ${c.coral}`}>&#9656;</span> {article.source}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
